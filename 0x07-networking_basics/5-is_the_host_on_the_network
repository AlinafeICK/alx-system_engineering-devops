#!/usr/bin/env bash
# This is a pinging bash program
if [ $# -eq 0 ]; then
    echo "Usage: $0 {IP_ADDRESS}"
    exit 1
fi

# Extract the IP address from the argument
ip_address="$1"

# Ping the IP address 5 times
ping_result=$(ping -c 5 "$ip_address")

# Display the ping results
echo "$ping_result"

